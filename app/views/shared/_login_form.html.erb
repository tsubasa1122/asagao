<h2>ログイン</h2>
<% if flash.alert %>
  <p class="alert"><%= flash.alert %></p>
<% end %>

<%= form_tag :session, id: "login_form" do %>
  <div> 
    <label for="">ユーザー名</label>
    <input type="text" name="name">
  </div>
  <div>
    <label for="">パスワード</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>